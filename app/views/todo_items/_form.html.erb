
<%= form_for([@todo_list, @todo_list.todo_items.build],:html=>{:style=>'width:66vw;display:flex;flex-direction:column;justify-content:space-between;align-items:center	'})  do |f| %>
	<%= f.text_field :content, placeholder: "Add New Todo",class:'p-2 m-2 w-2/3 outline-none border-b-2 border-bg-gray-300 transition duration-700  border-teal-400 ' %>
	<%= f.submit class:'w-1/5 m-2 cursor-pointer text-white bg-blue-800 p-4 rounded-full transition duration-500 hover:-translate-y-1 ' %>
<% end %>
